<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="16dp">

    <CheckBox
        android:id="@+id/contatoItemCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/contatoItemTextViewNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toEndOf="@id/contatoItemCheckbox"
        app:layout_constraintBottom_toTopOf="@id/contatoItemTextViewNumero" />

    <TextView
        android:id="@+id/contatoItemTextViewNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/contatoItemCheckbox"
        app:layout_constraintTop_toBottomOf="@id/contatoItemTextViewNome" />

</android.support.constraint.ConstraintLayout>